---
import theme from "@/data/theme";
import { MAP_COLOR_VARIANT_TO_TEXT } from "@/utils/mapVariants";
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <a href={`mailto:${presentation.mail}`} class="hover:text-purple-500"
    >{presentation.mail}</a
  >

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-neutral-100"]: true,
            [MAP_COLOR_VARIANT_TO_TEXT[theme.colors.primary]]: pathname === "/",
          }}>Home</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-neutral-100"]: true,
            [MAP_COLOR_VARIANT_TO_TEXT[theme.colors.primary]]: pathname === "/posts",
          }}>Posts</a
        >
      </li>
    </ul>
  </nav>
</header>
